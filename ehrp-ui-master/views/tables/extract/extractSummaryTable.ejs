<table class="table table-striped table-hover table-condensed table-responsive">
  <caption>Patient summary</caption>
  <thead>
    <th>Age</th>
    <th>Gender</th>
    <th>Trigger phrase</th>
    <th>Context</th>
  </thead>
  <tbody>
    <tr ng-repeat="info in _extractPt_summary.instances">
      <td class="no-wrap">{{info.age}}</td>
      <td class="no-wrap">{{info.gender}}</td>
      <td class="no-wrap">{{info.trigger}}</td>
      <td class="word-wrap">{{info.context.replace("\t","*")}}</td>
    </tr>
  </tbody>
</table>
