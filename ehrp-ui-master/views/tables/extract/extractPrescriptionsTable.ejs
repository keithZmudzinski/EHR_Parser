<table class="table table-striped table-hover table-condensed table-responsive">
  <caption>Prescription doses</caption>
  <thead>
    <th>Prescribed drug</th>
    <th>Dosage</th>
    <th>UMID</th>
    <th>Ontology</th>
    <th>Context</th>
  <thead>
  <tbody>
    <tr ng-repeat="prescription in _extractPrescription.instances">
      <td class="no-wrap">{{ prescription.drug }}</td>
      <td class="no-wrap">{{ prescription.dosage }}</td>

      <!--- Use correct URL for used ontology --->
      <td ng-if="prescription.onto == 'DRUGBANK'" class="no-wrap">
        <a href="https://www.drugbank.ca/drugs/{{prescription.umid}}" target="_blank">{{prescription.umid}}</a>
      </td>

      <td ng-if="prescription.onto == 'MEDDRA' || prescription.onto == 'RXNORM'" class="no-wrap">
        <a href="http://bioportal.bioontology.org/ontologies/{{prescription.onto}}?p=classes&conceptid={{prescription.umid}}" target="_blank">{{prescription.umid}}</a>
      </td>

      <td ng-if="prescription.onto == 'DRUGSATFDA'" class="no-wrap">
        <a href="https://www.accessdata.fda.gov/scripts/cder/daf/index.cfm?event=overview.process&ApplNo={{prescription.umid}}" target="_blank">{{prescription.umid}}</a>
      </td>

      <td ng-if="prescription.onto == 'NDDF' || prescription.onto == 'ATC'" class="no-wrap">
        <a href="http://bioportal.bioontology.org/search?q={{prescription.umid}}&ontologies={{prescription.onto}}&include_properties=false&include_views=false&includeObsolete=false&require_definition=false&exact_match=false&categories=" target="_blank">{{prescription.umid}}</a>
      </td>


      <td class="word-wrap">{{ prescription.onto }}</td>
      <td class="word-wrap">{{ prescription.context.replace("\t","*") }}</td>
    </tr>
  </tbody>
</table>
