<table class="table table-striped table-hover table-condensed table-responsive">
  <caption>Pneumonia terms</caption>
  <thead>
    <th>Term</th>
    <th>Type</th>
    <th>Context</th>
  </thead>
  <tbody>
    <tr ng-repeat="pna in _extractPna.instances">
      <td class="no-wrap">{{pna.trigger}}</td>
      <td class="no-wrap">{{pna.type}}</td>
      <td class="word-wrap">{{pna.context.replace("\t","*")}}</td>
    </tr>
  </tbody>
</table>
