<table class="table table-striped table-hover table-condensed table-responsive">
  <caption>Drugs</caption>
  <thead>
    <th>Label</th>
    <th>UMID</th>
    <th>Ontology</th>
  </thead>
  <tbody>
    <tr ng-repeat="drug in _lookupDrug.instances">
      <td class="no-wrap">{{drug.label}}</td>

      <!--- Use correct URL for used ontology --->
      <td ng-if="drug.onto == 'DRUGBANK'" class="no-wrap">
        <a href="https://www.drugbank.ca/drugs/{{drug.umid}}" target="_blank">{{drug.umid}}</a>
      </td>

      <td ng-if="drug.onto == 'MEDDRA' || drug.onto == 'RXNORM'" class="no-wrap">
        <a href="http://bioportal.bioontology.org/ontologies/{{drug.onto}}?p=classes&conceptid={{drug.umid}}" target="_blank">{{drug.umid}}</a>
      </td>

      <td ng-if="drug.onto == 'DRUGSATFDA'" class="no-wrap">
        <a href="https://www.accessdata.fda.gov/scripts/cder/daf/index.cfm?event=overview.process&ApplNo={{drug.umid}}" target="_blank">{{drug.umid}}</a>
      </td>

      <td ng-if="drug.onto == 'NDDF'" class="no-wrap">
        <a href="http://bioportal.bioontology.org/search?q={{drug.umid}}&ontologies=NDDF&include_properties=false&include_views=false&includeObsolete=false&require_definition=false&exact_match=false&categories=" target="_blank">{{drug.umid}}</a>
      </td>

      <td class="no-wrap">{{drug.onto}}</td>
    </tr>
  </tbody>
</table>
