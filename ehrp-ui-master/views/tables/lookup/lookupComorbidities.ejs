<table class="table table-striped table-hover table-condensed table-responsive">
  <caption>Comorbidity terms</caption>
  <thead>
    <th>Term</th>
    <th>Type</th>
    <th>Context</th>
  </thead>
  <tbody>
    <tr ng-repeat="comorbidity in _lookupComorbidities.instances">
      <td class="no-wrap">{{comorbidity.trigger}}</td>
      <td class="no-wrap">{{comorbidity.type}}</td>
      <td class="word-wrap">{{comorbidity.context.replace("\t","*")}}</td>
    </tr>
  </tbody>
</table>
